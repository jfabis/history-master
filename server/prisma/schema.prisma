generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  googleId      String?   @unique // Opcjonalne dla logowania hasłem
  password      String?   // Hasło (dla strategii lokalnej)
  displayName   String?
  avatarUrl     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  progress      UserProgress?
  answers       UserAnswer[]
  sessions      Session[]
  refreshTokens RefreshToken[]
}

model Session { 
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model UserProgress {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  xp            Int       @default(0)
  level         Int       @default(1)
  currentStreak Int       @default(0)
  totalActiveDays Int     @default(1)
  lastActive    DateTime  @default(now())
}

model Topic {
  id          String      @id @default(uuid())
  name        String      @unique
  description String?
  order       Int         @default(0)
  questions   Question[]
  cards       StudyCard[]
}

model Question {
  id            String   @id @default(uuid())
  topicId       String
  topic         Topic    @relation(fields: [topicId], references: [id])
  content       String
  correctAnswer String
  options       String[]
  explanation   String?
  difficulty    Int      @default(1)
  answers       UserAnswer[]
}

model StudyCard {
  id           String   @id @default(uuid())
  topicId      String
  topic        Topic    @relation(fields: [topicId], references: [id])
  frontContent String
  backContent  String
  type         String   @default("FACT")
}

model TimelineEvent {
  id          String   @id @default(uuid())
  year        String
  sortOrder   Int
  title       String
  description String
  era         String
}

model UserAnswer {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  isCorrect  Boolean
  answeredAt DateTime @default(now())
}

model GeneratedAsset {
  id        String   @id @default(uuid())
  prompt    String
  provider  String   @default("google-nano-banana")
  imageUrl  String
  createdAt DateTime @default(now())
}

model HistoricalBattle {
  id          String   @id @default(uuid())
  name        String   @unique
  year        String
  winner      String
  loser       String
  forces      String
  description String
  prompt      String
  createdAt   DateTime @default(now())
}

model HistoricalCostume {
  id          String   @id @default(uuid())
  name        String
  era         String
  class       String
  description String
  prompt      String
  createdAt   DateTime @default(now())
}

model TimeDetectiveScenario {
  id          String   @id @default(uuid())
  era         String   // np. "Starożytny Egipt"
  description String // opis dla admina
  prompt      String   // Pełny prompt
  difficulty  Int      @default(1)
  createdAt   DateTime @default(now())
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
}